<h1><%=@cocktail.name%> <i class="fas fa-glass-martini-alt"></i> </h1>

<ul>
  <% @doses.each do | dose| %>
  <li><%= dose.description %> <%= dose.ingredient.name %> <%= link_to dose_path(dose), method: :delete, data: { confirm: "Delete?" } do %>
      <i class="far fa-trash-alt "></i>
    <% end %> </li>
  <% end %>
</ul>



<%= link_to new_cocktail_dose_path(@cocktail), class: "btn btn-primary mb-2" do %>
  Add Ingredient <i class="fas fa-plus-circle"></i>
<% end %>

<%= link_to cocktails_path, class: "btn btn-danger" do %>
  <i class="fas fa-backspace"></i> Back to menu
<% end %>


